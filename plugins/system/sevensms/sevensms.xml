<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>plg_system_sevensms</name>
    <author>seven communications GmbH &amp; Co. KG</author>
    <creationDate>January 2026</creationDate>
    <copyright>Copyright (C) seven communications GmbH &amp; Co. KG</copyright>
    <license>MIT</license>
    <authorEmail>support@seven.io</authorEmail>
    <authorUrl>https://www.seven.io</authorUrl>
    <version>1.0.0</version>
    <description>PLG_SYSTEM_SEVENSMS_DESCRIPTION</description>

    <namespace path="src">Seven\Plugin\System\SevenSms</namespace>

    <files>
        <folder plugin="sevensms">services</folder>
        <folder>src</folder>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/plg_system_sevensms.ini</language>
        <language tag="en-GB">en-GB/plg_system_sevensms.sys.ini</language>
        <language tag="de-DE">de-DE/plg_system_sevensms.ini</language>
        <language tag="de-DE">de-DE/plg_system_sevensms.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="enabled_user_registration"
                    type="radio"
                    label="PLG_SYSTEM_SEVENSMS_USER_REGISTRATION"
                    description="PLG_SYSTEM_SEVENSMS_USER_REGISTRATION_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="enabled_content_save"
                    type="radio"
                    label="PLG_SYSTEM_SEVENSMS_CONTENT_SAVE"
                    description="PLG_SYSTEM_SEVENSMS_CONTENT_SAVE_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
