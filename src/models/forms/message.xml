<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="message">
        <field
                name="id"
                type="hidden"
        />

        <field
                key_field="id"
                label="COM_SEVEN_CHOOSE_CONFIG"
                name="configuration"
                query="SELECT id, api_key FROM #__seven_configurations"
                required="true"
                type="sql"
                value_field="api_key"
        />

        <field
                description="COM_SEVEN_TEXT_DESC"
                hint="COM_SEVEN_TEXT_DESC"
                label="COM_SEVEN_TEXT_LABEL"
                name="text"
                required="true"
                type="textarea"
        />

        <field
                description="COM_SEVEN_TO_DESC"
                hint="COM_SEVEN_TO_DESC"
                label="COM_SEVEN_TO_LABEL"
                name="to"
                type="text"
        />

        <field
                default="SMS"
                description="COM_SEVEN_FROM_DESC"
                hint="COM_SEVEN_FROM_DESC"
                label="COM_SEVEN_FROM"
                name="from"
                type="text"
        />

        <field
                description="COM_SEVEN_FOREIGN_ID_DESC"
                hint="COM_SEVEN_FOREIGN_ID_DESC"
                label="COM_SEVEN_FOREIGN_ID"
                maxlength="64"
                name="foreign_id"
                pattern="[A-Za-z0-9, .\-_@]{0,100}"
                type="text"
        />

        <field
                description="COM_SEVEN_LABEL_DESC"
                hint="COM_SEVEN_LABEL_DESC"
                label="COM_SEVEN_LABEL"
                maxlength="100"
                name="label"
                pattern="[A-Za-z0-9, .\-_@]{0,100}"
                type="text"
        />

        <field
                description="COM_SEVEN_DELAY_DESC"
                hint="COM_SEVEN_DELAY_DESC"
                label="COM_SEVEN_DELAY"
                name="delay"
                type="text"
        />

        <field
                description="COM_SEVEN_UDH_DESC"
                hint="COM_SEVEN_UDH_DESC"
                label="COM_SEVEN_UDH"
                name="udh"
                type="text"
        />

        <field
                default="2880"
                description="COM_SEVEN_TTL_DESC"
                hint="COM_SEVEN_TTL_DESC"
                label="COM_SEVEN_TTL"
                min="1"
                name="ttl"
                step="1"
                type="number"
        />

        <field
                description="COM_SEVEN_PERFORMANCE_TRACKING_DESC"
                hint="COM_SEVEN_PERFORMANCE_TRACKING_DESC"
                label="COM_SEVEN_PERFORMANCE_TRACKING"
                name="performance_tracking"
                type="checkbox"
                value="1"
        />

        <field
                description="COM_SEVEN_UTF8_DESC"
                hint="COM_SEVEN_UTF8_DESC"
                label="COM_SEVEN_UTF8"
                name="utf8"
                type="checkbox"
                value="1"
        />

        <field
                description="COM_SEVEN_FLASH_DESC"
                hint="COM_SEVEN_FLASH_DESC"
                label="COM_SEVEN_FLASH"
                name="flash"
                type="checkbox"
                value="1"
        />

        <field
                description="COM_SEVEN_UNICODE_DESC"
                hint="COM_SEVEN_UNICODE_DESC"
                label="COM_SEVEN_UNICODE"
                name="unicode"
                type="checkbox"
                value="1"
        />

        <field
                description="COM_SEVEN_NO_RELOAD_DESC"
                hint="COM_SEVEN_NO_RELOAD_DESC"
                label="COM_SEVEN_NO_RELOAD"
                name="no_reload"
                type="checkbox"
                value="1"
        />

        <field
                description="COM_SEVEN_DEBUG_DESC"
                hint="COM_SEVEN_DEBUG_DESC"
                label="COM_SEVEN_DEBUG"
                name="debug"
                type="checkbox"
                value="1"
        />

        <field
                name="country_id"
                type="text"
        />

        <field
                header="COM_VIRTUEMART_LIST_EMPTY_OPTION"
                key_field="virtuemart_shoppergroup_id"
                label="COM_VIRTUEMART_SHOPPERGROUP"
                name="shopper_group_id"
                query="SELECT virtuemart_shoppergroup_id, shopper_group_name FROM #__virtuemart_shoppergroups WHERE published = 1"
                translate="true"
                type="sql"
                value_field="shopper_group_name"
        />
    </fieldset>
</form>
