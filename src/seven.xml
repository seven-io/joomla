<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
    <name>COM_SEVEN</name>
    <creationDate>January 2026</creationDate>
    <author>seven communications GmbH &amp; Co. KG</author>
    <authorEmail>support@seven.io</authorEmail>
    <authorUrl>https://www.seven.io</authorUrl>
    <copyright>seven communications GmbH &amp; Co. KG</copyright>
    <license>MIT</license>
    <version>3.1.0</version>
    <description>COM_SEVEN_XML_DESCRIPTION</description>

    <compatibility>
        <cms>
            <targetplatform name="joomla" version="5.*"/>
            <targetplatform name="joomla" version="6.*"/>
        </cms>
    </compatibility>

    <namespace path="src">Seven\Component\Seven</namespace>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <administration>
        <menu view="configurations">COM_SEVEN</menu>
        <submenu>
            <menu link="option=com_seven&amp;view=configurations">COM_SEVEN_CONFIGURATIONS</menu>
            <menu link="option=com_seven&amp;view=automations">COM_SEVEN_AUTOMATIONS</menu>
            <menu link="option=com_seven&amp;view=messages">COM_SEVEN_MESSAGES</menu>
            <menu link="option=com_seven&amp;view=voices">COM_SEVEN_VOICE_MESSAGES</menu>
        </submenu>
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>forms</folder>
            <folder>services</folder>
            <folder>sql</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
        </files>
        <languages folder="admin/language">
            <language tag="en-GB">en-GB/com_seven.ini</language>
            <language tag="en-GB">en-GB/com_seven.sys.ini</language>
            <language tag="de-DE">de-DE/com_seven.ini</language>
            <language tag="de-DE">de-DE/com_seven.sys.ini</language>
        </languages>
    </administration>

</extension>
