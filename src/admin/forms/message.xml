<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="id" type="hidden" />

        <field
            name="to"
            type="textarea"
            label="COM_SEVEN_TO_LABEL"
            description="COM_SEVEN_TO_DESC"
            rows="3"
            cols="50"
        />

        <field
            name="text"
            type="textarea"
            label="COM_SEVEN_TEXT_LABEL"
            description="COM_SEVEN_TEXT_DESC"
            required="true"
            rows="5"
            cols="50"
        />

        <field
            name="from"
            type="text"
            label="COM_SEVEN_FROM"
            description="COM_SEVEN_FROM_DESC"
            default="seven"
            size="20"
        />
    </fieldset>

    <fieldset name="options" label="COM_SEVEN_OPTIONS">
        <field
            name="flash"
            type="checkbox"
            label="COM_SEVEN_FLASH"
            description="COM_SEVEN_FLASH_DESC"
        />

        <field
            name="unicode"
            type="checkbox"
            label="COM_SEVEN_UNICODE"
            description="COM_SEVEN_UNICODE_DESC"
        />

        <field
            name="utf8"
            type="checkbox"
            label="COM_SEVEN_UTF8"
            description="COM_SEVEN_UTF8_DESC"
            default="1"
        />

        <field
            name="performance_tracking"
            type="checkbox"
            label="COM_SEVEN_PERFORMANCE_TRACKING"
            description="COM_SEVEN_PERFORMANCE_TRACKING_DESC"
        />

        <field
            name="no_reload"
            type="checkbox"
            label="COM_SEVEN_NO_RELOAD"
            description="COM_SEVEN_NO_RELOAD_DESC"
        />

        <field
            name="delay"
            type="text"
            label="COM_SEVEN_DELAY"
            description="COM_SEVEN_DELAY_DESC"
            size="30"
        />

        <field
            name="ttl"
            type="number"
            label="COM_SEVEN_TTL"
            description="COM_SEVEN_TTL_DESC"
            default="2880"
            min="1"
        />

        <field
            name="foreign_id"
            type="text"
            label="COM_SEVEN_FOREIGN_ID"
            description="COM_SEVEN_FOREIGN_ID_DESC"
            size="30"
            maxlength="64"
        />

        <field
            name="label"
            type="text"
            label="COM_SEVEN_LABEL"
            description="COM_SEVEN_LABEL_DESC"
            size="30"
            maxlength="100"
        />

        <field
            name="udh"
            type="text"
            label="COM_SEVEN_UDH"
            description="COM_SEVEN_UDH_DESC"
            size="30"
        />
    </fieldset>

    <fieldset name="virtuemart" label="COM_SEVEN_VIRTUEMART">
        <field
            name="country_id"
            type="sql"
            label="COM_SEVEN_COUNTRY"
            description="COM_SEVEN_COUNTRY_DESC"
            query="SELECT virtuemart_country_id AS value, country_name AS text FROM #__virtuemart_countries ORDER BY country_name"
            key_field="value"
            value_field="text"
        >
            <option value="">- Select Country -</option>
        </field>

        <field
            name="shopper_group_id"
            type="sql"
            label="COM_SEVEN_SHOPPER_GROUP"
            description="COM_SEVEN_SHOPPER_GROUP_DESC"
            query="SELECT virtuemart_shoppergroup_id AS value, shopper_group_name AS text FROM #__virtuemart_shoppergroups ORDER BY shopper_group_name"
            key_field="value"
            value_field="text"
        >
            <option value="">- Select Shopper Group -</option>
        </field>
    </fieldset>
</form>
