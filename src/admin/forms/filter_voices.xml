<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_SEVEN_FILTER_SEARCH_LABEL"
            description="COM_SEVEN_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            default="a.id DESC"
            onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="a.recipient ASC">COM_SEVEN_TO_ASC</option>
            <option value="a.recipient DESC">COM_SEVEN_TO_DESC</option>
            <option value="a.created ASC">COM_SEVEN_CREATED_ASC</option>
            <option value="a.created DESC">COM_SEVEN_CREATED_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            default="25"
            onchange="this.form.submit();"
        />
    </fields>
</form>
