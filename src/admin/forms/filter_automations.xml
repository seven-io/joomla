<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_SEVEN_FILTER_SEARCH_LABEL"
            description="COM_SEVEN_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="enabled"
            type="list"
            label="JSTATUS"
            onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JENABLED</option>
            <option value="0">JDISABLED</option>
        </field>

        <field
            name="trigger_type"
            type="list"
            label="COM_SEVEN_AUTOMATION_TRIGGER"
            onchange="this.form.submit();"
        >
            <option value="">COM_SEVEN_SELECT_TRIGGER</option>
            <option value="vm_order_confirmed">COM_SEVEN_TRIGGER_VM_ORDER_CONFIRMED</option>
            <option value="vm_order_status_change">COM_SEVEN_TRIGGER_VM_ORDER_STATUS</option>
            <option value="vm_order_shipped">COM_SEVEN_TRIGGER_VM_ORDER_SHIPPED</option>
            <option value="vm_order_cancelled">COM_SEVEN_TRIGGER_VM_ORDER_CANCELLED</option>
            <option value="user_registration">COM_SEVEN_TRIGGER_USER_REGISTRATION</option>
            <option value="content_save">COM_SEVEN_TRIGGER_CONTENT_SAVE</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            default="a.id DESC"
            onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="a.title ASC">COM_SEVEN_TITLE_ASC</option>
            <option value="a.title DESC">COM_SEVEN_TITLE_DESC</option>
            <option value="a.created ASC">COM_SEVEN_CREATED_ASC</option>
            <option value="a.created DESC">COM_SEVEN_CREATED_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            default="25"
            onchange="this.form.submit();"
        />
    </fields>
</form>
